<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Style x:Key="LabelHeader" 
           TargetType="{x:Type Label}" 
           BasedOn="{StaticResource MaterialDesignLabel}">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignToolForeground}"/>
    </Style>

    <Style x:Key="TextBlockHeader" 
           TargetType="{x:Type TextBlock}" 
           BasedOn="{StaticResource MaterialDesignBody2TextBlock}">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Segoe UI SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
    </Style>
</ResourceDictionary>